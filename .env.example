# MongoDB Configuration
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database_name
MONGODB_DB_NAME=your_database_name
MONGODB_COLLECTION=your_collection_name

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# API Protection Key - Backend (server-side, private)
# Generate with: openssl rand -base64 32
API_KEY=your_secure_api_key_here

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# API Protection Key - Frontend (client-side, bundled with app)
# Note: Next.js requires NEXT_PUBLIC_ prefix for client-side env vars
# Use the same value as API_KEY above
NEXT_PUBLIC_API_KEY=your_secure_api_key_here 